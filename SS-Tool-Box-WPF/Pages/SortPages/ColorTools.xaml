<Page x:Class="SS_Tool_Box.Pages.SortPages.ColorTools"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SS_Tool_Box.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="490" d:DesignWidth="633"
      Title="ColorTools"
      Loaded="Page_Loaded"
      >

    <StackPanel>
        <Grid Height="40" Margin="0,0,0,15">
            <Button Style="{DynamicResource BCardEx}" Background="{DynamicResource colorCard}" Margin="0"/>
            <TextBlock Text="{DynamicResource tool_type_color}" FontSize="15" Foreground="{DynamicResource colorFont}" Margin="17,12,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        </Grid>
        <Grid x:Name="Cards"/>
    </StackPanel>
</Page>
